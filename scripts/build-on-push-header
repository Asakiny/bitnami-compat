name: Build on Push
on:
  push:
  workflow_dispatch:
  schedule:
    - cron: '10 0 * * 5'
    - cron: '10 3 * * 5' # trigger for failed jobs

env:
  REGISTRY: ghcr.io

jobs:
  build-bitnami-compat:
    runs-on: ubuntu-latest
    if: >-
      ${{ !contains(github.event.head_commit.message, '[ci skip]') &&
      !contains(github.event.head_commit.message, '[skip ci]')
      }}
    permissions:
      contents: read
      packages: write
    strategy:
      fail-fast: false
      matrix:
        include:
